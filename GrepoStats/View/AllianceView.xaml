<UserControl x:Class="GrepoStats.View.AllianceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:util="clr-namespace:GrepoStats.Utils.Wpf.Util"
             DataContext="{Binding Source={StaticResource Locator},
                                   Path=AllianceViewModel}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <ListView IsSynchronizedWithCurrentItem="True"
                  ItemsSource="{Binding AlliancesList}"
                  util:GridViewSort.AutoSort="True">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Id}"
                                    Header="ID"
                                    util:GridViewSort.PropertyName="Id" />

                    <GridViewColumn DisplayMemberBinding="{Binding Name}"
                                    Header="Name"
                                    util:GridViewSort.PropertyName="Name" />

                    <GridViewColumn DisplayMemberBinding="{Binding Points}"
                                    Header="Points"
                                    util:GridViewSort.PropertyName="Points" />

                    <GridViewColumn DisplayMemberBinding="{Binding Villages}"
                                    Header="Villages"
                                    util:GridViewSort.PropertyName="Villages" />

                    <GridViewColumn DisplayMemberBinding="{Binding Members}"
                                    Header="Members"
                                    util:GridViewSort.PropertyName="Members" />

                    <GridViewColumn DisplayMemberBinding="{Binding Rank}"
                                    Header="Rank"
                                    util:GridViewSort.PropertyName="Rank" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>